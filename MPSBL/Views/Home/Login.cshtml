<link href="~/Content/style2.css" rel="stylesheet" />

<div class="login-page">
		<div class="form">
			<form class="register-form" action="#" method="post" id="register">
				<input type="text" placeholder="name" />
				<input type="password" placeholder="password" />
				<input type="text" placeholder="email address" />
				<button>create</button>
				<p class="message">Already registered? <a href="#">Sign In</a></p>
			</form>
			<form class="login-form" action="#" method="post" id="login">
				<input type="text" name="username" id="usr" placeholder="username" />
				<input type="password" name="password" placeholder="password" />
				<button type="submit">login</button>
				<p class="message">Not registered? <a href="#">Create an account</a></p>
			</form>

		</div>
	</div>

	<script>


		$('.message a').click(function (event) {
			event.preventDefault();
			$('form').animate({height: "toggle", opacity: "toggle"}, "slow");
		}); 

	</script>
